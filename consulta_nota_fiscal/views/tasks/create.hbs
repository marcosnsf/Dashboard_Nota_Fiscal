<nav class="breadcrumb">
  <a class="breadcrumb-item" href="/">Home</a>
  <a class="breadcrumb-item" href="/">Ofícios</a>
  <a class="breadcrumb-item" href="/indication">Indicações</a>
  <span class="breadcrumb-item active">Adicionar Ofícios</span>
  <a class="breadcrumb-item" href="/add1">Adicionar indicações</a>
</nav>

<div class="card card-body p-3">
  <form action="/store" method="post" enctype="multipart/form-data">
    {{# if success}}
    {{else}}
    {{# if errors}}
    <div class="alert alert-danger">
      {{# each errors}}
      <p>{{ this.msg }}</p>
      {{/each}}
    </div>
    {{/if}}
    {{/if}}


  <form method="post" enctype="multipart/form-data" >
    
    <div class="row">
          <div class="form-group col-12 col-lg-6">
        <label for="oficio">Ofício</label>
        <input type="text" class="form-control" name="oficio1" id="oficio">
      </div>
      
      <div class="form-group col-12 col-lg-6">
        <label for="dataoficio">Data de oficio</label>
        <input type="text" class="form-control" name="dataoficio" id="dataoficio" >
      </div>
    </div>

    <div class="form-group">
      <label for="description">Descrição</label>
      <textarea name="description" id="description" rows="5" class="form-control"></textarea>
    </div>

     <div class="form-group">
      <label for="destiny">Destino</label>
      <input name="destiny" id="destiny"  class="form-control">
    </div>

     <div class="form-group">
      <label for="process">Processo</label>
      <input name="process" id="process"  class="form-control">
    </div>

      <div class="form-group">
        <label for="vereador1">Vereador</label>
        <input name="vereador1" id="vereador1"  class="form-control">
      </div>

    <div class="form-group">
      <label for="observation">Observação</label>
      <textarea name="observation" id="observation" rows="5" class="form-control"></textarea>
    </div>



    <div class="form-check">
      <div class="row">
        <div class="col-12 mb-2">
          <label class="form-check-label text-danger">
          <input type="radio" name="status" value="false" class="form-check-input"> Em Análise
        </label>
        </div>
        
        <div class="col-12">
          <label class="form-check-label text-success">
          <input type="radio" name="status" value="true" class="form-check-input"> Deferido
        </label>
        </div>
      </div>
    </div>


    <div>
      <label for="exampleFormControlFile1"></label>
      <input type="file" class="form-control-file" id="exampleFormControlFile1"name="xs" multiple="multiple">
    </div>

    

    <div> 
      <label for="exampleFormControlFile1"></label>
   
      <button type="submit" class="btn btn-primary mt-3">Adicionar Ofício</button>
      <button type="reset" class="btn btn-danger mt-3">Limpar Ofício</button>
    </div>

  </form>
</div>

