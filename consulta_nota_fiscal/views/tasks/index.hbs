													<textarea name="fornecedorCnpj" id="fornecedorCnpj" type="text" rows="5" class="form-control">{{ this.fornecedorCnpj }}</textarea>
												</div>
												<div class="form-group">
													<label for="situacao">Situação</label>
													<textarea name="situacao" id="situacao" type="text" rows="5" class="form-control">{{ this.situacao }}</textarea>
												</div>
												<div class="form-group">
													<label for="aprovacao">Gestor</label>
													<textarea name="aprovacao" id="aprovacao" type="text" rows="5" class="form-control">{{ this.aprovacao }}</textarea>
