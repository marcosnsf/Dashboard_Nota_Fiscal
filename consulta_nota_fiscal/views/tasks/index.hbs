													<label for="pedidocompra">Pedido de Compra</label>
													<textarea name="pedidocompra" id="pedidocompra" type="text" rows="5" class="form-control">{{ this.pedidocompra }}</textarea>
												</div>
												<div class="form-group">
													<label for="operador">Ultimo operador</label>
													<textarea name="operador" id="operador" type="text" rows="5" class="form-control">{{ this.operador }}</textarea>
												</div>
												
												







												<div class="form-group">
													<label for="observation">Observação</label>
													<textarea name="observation" id="observation" rows="5" class="form-control">{{ this.observation }}</textarea>
												</div>

												

												<div class="form-check" style="display: none;">
													<label for="status">Situação</label>
													<br>

													{{#if this.status}}
