								<div class="modal-dialog" role="document">
									<div class="modal-content">
										<div class="modal-header">
											<h5 class="modal-title" id="exampleModalLabel">Editar - Atualizar Nota{{ this.oficio }}</h5>
											<button type="button" class="close" data-dismiss="modal" aria-label="Close">
												<span aria-hidden="true">&times;</span>
											</button>
										</div>
										<a class="waves-effect waves-light btn modal-trigger" href="#modal1"></a>

  										<!-- Modal Structure -->
 
										<div class="modal-body">
											<form action="/update" method="post">
												<input type="hidden" name="id" value="{{ this._id }}">
												{{# if success}}
												{{else}}
												{{# if errors}}
												<div class="alert alert-danger">
													{{# each errors}}
													<p>{{ this.msg }}</p>
													{{/each}}
												</div>
												{{/if}}
												{{/if}}
												
												<div class="form-group">
													<label for="datanf">Data emissão Nota Fiscal:</label>
													<input  name="datanf" id="datanf" type="date" rows="5"  class="form-control">{{ this.datanf }}
												</div>
												<div class="form-group">
													<label for="numnf">N° Nota Fiscal</label>
													<textarea  name="numnf" id="numemp" type="number" rows="5"  class="form-control">{{ this.numnf }}</textarea>
												</div>

												<div class="form-group">
													<label for="destiny">N° de Empenho</label>
													<textarea name="numemp" id="numemp" type="number" rows="5"  class="form-control">{{ this.numemp }}</textarea>
												</div>

												<div class="form-group">
													<label for="numpedido">N° de pedido</label>
													<textarea name="numpedido" id="numpedido" rows="5" class="form-control">{{ this.numpedido }}</textarea>
												</div>

												<div class="form-group">
													<label for="numcontrato">N° de Contrato</label>
													<textarea name="numcontrato" id="numcontrato" type="number" rows="5" class="form-control">{{ this.numcontrato }}</textarea>
												</div>
												<div class="form-group">
													<label for="datareceb">Data de recebimento</label>
													<textarea name="datareceb" id="datareceb" rows="5" class="form-control">{{ this.datareceb }}</textarea>
												</div>
												<div class="form-group">
													<label for="valorVenda">Valor de venda</label>
													<textarea name="valorVenda" id="valorVenda" type="number" rows="5" class="form-control">{{ this.valorVenda }}</textarea>
												</div>
												<div class="form-group">
													<label for="secretaria">Secretaria</label>
													<textarea name="secretaria" id="secretaria" type="text" rows="5" class="form-control">{{ this.secretaria }}</textarea>
												</div>
												<div class="form-group">
													<label for="gestor">Gestor</label>
													<textarea name="gestor" id="gestor" type="text" rows="5" class="form-control">{{ this.gestor }}</textarea>
												</div>
												
