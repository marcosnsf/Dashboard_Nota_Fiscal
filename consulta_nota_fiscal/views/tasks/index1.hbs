	

<div class="clearfix"></div>
<div >
	<div class="table-responsive">
		<table class="striped highlight" id="dataTable">
			<thead class="">
				<tr class="">
					
					<th>Emissão Nota Fiscal</th>
					<th>N° Nota Fiscal</th>
					<th>N° Empenho</th>
					<th>N° pedido Nota Fiscal</th>
					<th>N° Contrato:</th>
					<th>Recebimento Nota Fiscal:</th>
					<th>Valor da nota:</th>
					<th>Secretaria</th>
					<th>Fornecedor</th>
					<th>Situação e Aprovação</th>
					<th>Pedido de compra</th>
					<th>Operador e Ultima Modificação</th> 
					<th>Arquivo Nota Fiscal</th> 
					<th>Arquivo Laudo</th>
					<th>Observações</th>
				
					<th>Ações</th>
				</tr>
			</thead>
			<tbody>

				{{# each model }}
				<tr>
					
					<td>{{ this.datanf1 }}</td>	
					<td>{{this.numnf1}}</td>
					<td>{{this.numemp1}}</td>
					<td>{{this.numpedido1}}</td>
					<td>{{this.numcontrato1}}</td>
					<td>{{this.datareceb1}}</td>
					<td>{{this.valorVenda1}}</td>
					<td>{{this.secretaria }} | {{this.gestor}}</td>
					<td>{{this.fornecedorRazaoSocial}}  | {{this.fornecedorCnpj}} </td> 
					<td>{{this.situacao}} | {{this.aprovacao}} </td>
					<td>{{this.pedidocompra1}}</td>
					<td>{{this.operador1}} | {{this.dtmodificacao1}}</td>
					<td>{{this.arquivonf}}</td>
					<td>{{this.arquivolaudo}}</td>
					<td>{{this.observation1}}</td>
					{{!-- 
					<td>{{this.situacao}}</td>
					<td></td> --}}
								
		{{!-- 
					<td>
						{{#if status}}
						<span class="badge badge-success">
							Deferido
						</span>
						{{ else }}
						<span class="badge badge-danger">
							Em Análise
						</span>
						{{/if}}
						
					</td> --}}

					{{!-- <td>{{ this.observation }}</td>
					<td>{{ this.data }}</td>
					<td>{{ this.arquivo }}</td> --}}

					<td>
						<div>
							
							<a href="" data-toggle="modal" data-target="#modalView{{ this._id }}" class="btn btn-primary btn-sm" >Visualizar </a>
							<a href="#modalEdit{{ this._id }}" class="btn btn-success btn-sm" style="margin: 8px 0; padding: 2px 20px;" data-toggle="modal" data-target="#modalEdit{{ this._id }}">Editar</a>
							
							

							<!-- Edit Modal -->
							<div class="modal fade" id="modalEdit{{ this._id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
								<div class="modal-dialog" role="document">
									<div class="modal-content">
										<div class="modal-header">
											<h5 class="modal-title" id="exampleModalLabel">Editar - Atualizar Nota{{ this.numnf1 }}</h5>
											<button type="button" class="close" data-dismiss="modal" aria-label="Close">
												<span aria-hidden="true">&times;</span>
											</button>
										</div>
										<a class="waves-effect waves-light btn modal-trigger" href="#modal1"></a>

  										<!-- Modal Structure -->
 
										<div class="modal-body">
											<form action="/update" method="post">
												<input type="hidden" name="id" value="{{ this._id }}">
												{{# if success}}
												{{else}}
												{{# if errors}}
												<div class="alert alert-danger">
													{{# each errors}}
													<p>{{ this.msg }}</p>
													{{/each}}
												</div>
												{{/if}}
												{{/if}}
												
												<div class="form-group">
													<label for="datanf1">Data emissão Nota Fiscal:</label>
													<textarea name="datanf1" id="datanf1" type="date" rows="5"  class="form-control">{{ this.datanf1 }}</textarea>
												</div>
												<div class="form-group">
													<label for="numnf">N° Nota Fiscal</label>
													<textarea name="numnf" id="numnf1" type="number" rows="5"  class="form-control">{{ this.numnf1 }}</textarea>
												</div>

												<div class="form-group">
													<label for="numemp1">N° de Empenho</label>
													<textarea name="numemp1" id="numemp1" type="number" rows="5"  class="form-control">{{ this.numemp1 }}</textarea>
												</div>

												<div class="form-group">
													<label for="numpedido1">N° de pedido</label>
													<textarea name="numpedido1" id="numpedido1" rows="5" class="form-control">{{ this.numpedido1 }}</textarea>
												</div>

												<div class="form-group">
													<label for="numcontrato1">N° de Contrato</label>
													<textarea name="numcontrato" id="numcontrato1" type="number" rows="5" class="form-control">{{ this.numcontrato1 }}</textarea>
												</div>
												<div class="form-group">
													<label for="datareceb1">Data de recebimento</label>
													<textarea name="datareceb1" id="datareceb1" rows="5" class="form-control">{{ this.datareceb1 }}</textarea>
												</div>
												<div class="form-group">
													<label for="valorVenda1">Valor de venda</label>
													<textarea name="valorVenda1" id="valorVenda1" type="number" rows="5" class="form-control">{{ this.valorVenda1 }}</textarea>
												</div>
												<div class="form-group">
													<label for="secretaria">Secretaria</label>
													<textarea name="secretaria" id="secretaria" type="text" rows="5" class="form-control">{{ this.secretaria }}</textarea>
												</div>
												<div class="form-group">
													<label for="gestor">Gestor</label>
													<textarea name="gestor" id="gestor" type="text" rows="5" class="form-control">{{ this.gestor }}</textarea>
												</div>
												
												<div class="form-group">
													<label for="fornecedorRazaoSocial">Fornecedor</label>
													<textarea name="fornecedorRazaoSocial" id="fornecedorRazaoSocial" type="text" rows="5" class="form-control">{{ this.fornecedorRazaoSocial }}</textarea>
												</div>
												<div class="form-group">
													<label for="fornecedorCnpj">CNPJ</label>
													<textarea name="fornecedorCnpj" id="fornecedorCnpj" type="text" rows="5" class="form-control">{{ this.fornecedorCnpj }}</textarea>
												</div>
												<div class="form-group">
													<label for="situacao">Situação</label>
													<textarea name="situacao" id="situacao" type="text" rows="5" class="form-control">{{ this.situacao }}</textarea>
												</div>
												<div class="form-group">
													<label for="aprovacao">Gestor</label>
													<textarea name="aprovacao" id="aprovacao" type="text" rows="5" class="form-control">{{ this.aprovacao }}</textarea>
												</div>

												<div class="form-group">
													<label for="pedidocompra1">Pedido de Compra</label>
													<textarea name="pedidocompra1" id="pedidocompra1" type="text" rows="5" class="form-control">{{ this.pedidocompra1 }}</textarea>
												</div>
												<div class="form-group">
													<label for="operador1">Ultimo operador</label>
													<textarea name="operador1" id="operador1" type="text" rows="5" class="form-control">{{ this.operador1 }}</textarea>
												</div>
												
												







												<div class="form-group">
													<label for="observation1">Observação</label>
													<textarea name="observation1" id="observation1" rows="5" class="form-control">{{ this.observation1 }}</textarea>
												</div>

												

												<div class="form-check" style="display: none;">
													<label for="status">Situação</label>
													<br>

													{{#if this.status}}
													<label class="form-check-label text-success">
														<input type="radio"  name="status" value="true" class="form-check-input"  checked="true"> Deferido
													</label>
													<br>
													<label class="form-check-label text-danger">
														<input type="radio"  name="status" value="false" class="form-check-input"> Em Análise
													</label>

													{{ else }}
													<label class="form-check-label text-success">
														<input type="radio" name="status" value="true" class="form-check-input"> Deferido
													</label>
													<br>
													<label class="form-check-label text-danger">
														<input type="radio" name="status" value="false" class="form-check-input" checked="true"> Em Análise
													</label>
													
													{{/if}}
													
													<br>
													
												</div>
												
												<button type="submit" class="btn btn-success mt-3">Atualizar</button>
												<button type="button" class="btn btn-secondary mt-3" data-dismiss="modal">Cancelar</button>

											</form>
										</div>
									</div>
								</div>
							</div>


							<!-- Delete Modal -->
							<div class="modal fade" id="modalDelete{{ this._id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
								<div class="modal-dialog" role="document">
									<div class="modal-content">
										<div class="modal-header">
											<h5 class="modal-title text-danger" id="exampleModalLabel">Deletar Nota fiscal ?<mark>Nº {{ this.datanf }}</mark></h5>
											<button type="button" class="close" data-dismiss="modal" aria-label="Close">
												<span aria-hidden="true">&times;</span>
											</button>
										</div>
										<div class="modal-body">
											<form action="/delete" method="post">
												<input type="hidden" name="id" value="{{ this._id }}">
												<button type="submit" class="btn btn-danger mt-3">Deletar</button>
												<button type="button" class="btn btn-secondary mt-3" data-dismiss="modal">Cancelar</button>

											</form>
										</div>
									</div>
								</div>
							</div>


							<!-- View Modal -->
							<div class="modal fade"  id="modalView{{ this._id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
								<div class="modal-dialog"  role="document" >
									<div class="modal-content" 	>
										<div class="modal-header">
											<h5 class="modal-title" id="exampleModalLabel"><mark>N° Nota Fiscal: {{ this.numnf }}</mark></h5>
											<button type="button" class="close" data-dismiss="modal" aria-label="Close">
												<span aria-hidden="true">&times;</span>
											</button>
										</div>
										<div class="modal-body">

											<div>
												<strong>Data de emissão de Nota Fiscal: </strong> <br>
												{{ this.datanf1 }}
											</div>
											<div class="mt-3"> 
												<strong>Nº de empenho: </strong> <br>
												{{ this.numemp1 }}
											</div>
											<div>
												<strong>N° de contrato: </strong> <br>
												{{ this.numcontrato1 }}
											</div>
											<div class="mt-3"> 
												<strong>Data de Recebimento: </strong> <br>
												{{ this.datareceb1 }}
											</div>

											<div>
												<strong>Valor de venda: </strong> <br>
												{{ this.valorVenda1 }}
											</div>
											<div class="mt-3"> 
												<strong>Secretaria: </strong> <br>
												{{ this.secretaria }}
											</div>
											<div>
												<strong>Gestor: </strong> <br>
												{{ this.gestor }}
											</div>
											<div class="mt-3"> 
												<strong>Fornecedor: </strong> <br>
												{{ this.fornecedorRazaoSocial }}
											</div>
											<div class="mt-3"> 
												<strong>CNPJ: </strong> <br>
												{{ this.fornecedorCnpj }}
											</div>

											
											<div>
												<strong>Pedido de Compra: </strong> <br>
												{{ this.pedidocompra1 }}
											</div>
											<div class="mt-3"> 
												<strong>Ultimo operador: </strong> <br>
												{{ this.operador1 }}
											</div>
											<div class="mt-3"> 
												<strong>Ultima modificação: </strong> <br>
												{{ this.dtmodificacao1 }}
											</div>
											


											<div class="mt-3"> 
												<strong>Situação e Aprovação: </strong> <br>
												{{ this.aprovacao }} | {{ this.situacao }}
											</div>
										

											<button type="button" class=" mt-4 btn btn-success" data-dismiss="modal" aria-label="Close">
												Fechar
											</button>
										</div>
									</div>
								</div>
							</div>



						</div>
					</td>
				</tr>

				{{/each}}

			</tbody>
		</table>
	</div>
</div>
