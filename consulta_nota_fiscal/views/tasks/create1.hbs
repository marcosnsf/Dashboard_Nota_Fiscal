<nav class="breadcrumb">
  <a class="breadcrumb-item" href="/">Home</a>
  <a class="breadcrumb-item" href="/">Ofícios</a>
  <a class="breadcrumb-item" href="/indication">Indicações</a>
  <a class="breadcrumb-item" href="/add">Adicionar Oficios</a>
<span class="breadcrumb-item active">Adicionar Indicação</span>
</nav>


<div class="card card-body p-3">
  <form action="/store1" method="post" enctype="multipart/form-data">
    {{# if success1}}
    {{else}}
    {{# if errors1}}
    <div class="alert alert-danger">
      {{# each errors}}
      <p>{{ this.msg }}</p>
      {{/each}}
    </div>
    {{/if}}
    {{/if}}

    <form method="post" enctype="multipart/form-data" >
    
    <div class="row">
      <div class="form-group col-12 col-lg-6">
        <label for="indication">Indicação</label>
        <input type="text" class="form-control" name="indication" id="indication">
      </div>
      <div class="form-group col-12 col-lg-6">
        <label for="sessao">Sessão</label>
        <input type="text" class="form-control" name="sessao" id="sessao">
      </div>
    </div>
    
    <div class="form-group">
      <label for="description">Descrição</label>
      <textarea name="description1" id="description1" rows="5" class="form-control"></textarea>
    </div>

     <div class="form-group">
      <label for="destiny">Destino</label>
      <input name="destiny1" id="destiny1"  class="form-control">
    </div>

    <div class="form-group">
      <label for="destiny">Vereador</label>
      <input name="vereador" id="vereador"  class="form-control">
    </div>

     <div class="form-group">
      <label for="process">Processo</label>
      <input name="process1" id="process1"  class="form-control">
    </div>

    <div class="form-group">
      <label for="observation">Observação</label>
      <textarea name="observation1" id="observation1" rows="5" class="form-control"></textarea>
    </div>

   


    <div class="form-check">
      <label class="form-check-label text-danger">
        <input type="radio" name="status1" value="false" class="form-check-input"> Em Análise
      </label>
      <br>
      <label class="form-check-label text-success">
        <input type="radio" name="status1" value="true" class="form-check-input"> Deferido
      </label>
    </div>
    
    <div> 
      <label for="exampleFormControlFile1"></label>
      <input type="file" class="form-control-file" id="exampleFormControlFile1" name="file" multiple="multiple">
      <button type="submit" class="btn btn-primary mt-3">Adicionar Indicação</button>
      <button type="reset" class="btn btn-danger mt-3">Limpar Indicação</button>
    </div>
  </form>
</div>